{
  "name": "frontier-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Frontier Monorepo containing multiple applications and shared packages",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:all": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive exec rimraf dist coverage node_modules/.cache",
    "format": "prettier --write ."
  },
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.1.0"
}